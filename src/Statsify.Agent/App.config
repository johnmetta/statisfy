<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets async="true">
      <target name="null" xsi:type="Null" />
      <target name="console" xsi:type="Console" layout="${logger}: ${message}${exception}" />
      <target name="file" xsi:type="File" fileName="${environment:variable=PROGRAMDATA}\Statsify\Agent\Logs\global-${shortdate}.log" layout="${date:universalTime=true:format=HH:mm:ss.fff} - ${logger} - ${message}${exception}" />
    </targets>

    <rules>
      <logger name="*" minlevel="Info" writeTo="file" />
      <logger name="*" minlevel="Trace" writeTo="console" final="true" />
    </rules>
  </nlog>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>

  <system.net>
    <defaultProxy useDefaultCredentials="true">
      <proxy usesystemdefault="True" />
    </defaultProxy>
  </system.net>
</configuration>